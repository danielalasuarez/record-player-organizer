<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <nav>
      <%- include ('../partials/nav.ejs') %>
    </nav>
    <div class="container">
      <h1>New User</h1>
      <form action="/users" method="POST">
        <label for="name">User Name:</label>
        <input type="text" name="username" required/>
        <label for="color">Password:</label>
        <input type="password" name="password" />
        <br>
        <input class="submit" type="submit" value="Submit">
      </form>
      <br>
      <a class="backButton" href="/records">
        <button type="button" name="button">
          Back
        </button>
      </a>
    </div>
    <footer>
      <%- include ('../partials/footer.ejs') %>
    </footer>
  </body>
  <style>
    body{
      background-color: black;
      font-family: 'Fjalla One', sans-serif;
    }
    h1{
      font-family: 'Anton', sans-serif;
        font-size: 50px;
        text-align: center;
        margin-bottom: 59px;
        margin-top: 57px;
        margin-bottom: 57px;
    }
    form, label{
      color: white;
      font-size: 15px;
    }
    form:active{
      color:#1DB954;
    }
    input{
color:#1DB954;
    }
    .submit{
      margin-top:26px;
    }
    button, .submit{
      text-decoration: none;
      padding:10px;
      border-radius: 24px;
    width: 20%;
    color: black;
    font-weight: bolder;
    }
    button:hover, .submit:hover{
    background-color: #1DB954;
    cursor: pointer;
    color: white;
    }
    .backButton{
    color: black;
    font-size: 16px;
    }
    .backButton:hover{
      text-decoration: none;
    background-color: #1DB954;
    cursor: pointer;
    color: white;
    border-radius: 24px;
    width: 20%;
    }
